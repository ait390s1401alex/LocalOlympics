	<!-- ACTIVITY -->
	<servlet>
		<servlet-name>AddActivityServlet</servlet-name>
		<servlet-class>localolympics.servlet.AddActivityServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddActivityServlet</servlet-name>
		<url-pattern>/admin/addActivity</url-pattern>
	</servlet-mapping>
	
	
	
	<!--  OPEN ID  -->
	
	<servlet>
        <servlet-name>LoginRequiredServlet</servlet-name>
        <servlet-class>localolympics.servlet.LoginRequiredServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginRequiredServlet</servlet-name>
        <url-pattern>/_ah/login_required</url-pattern>
    </servlet-mapping>
	
	
	<security-constraint>
	    <web-resource-collection>
	        <web-resource-name>all</web-resource-name>
	        <url-pattern>/auth/*</url-pattern>
	    </web-resource-collection>
	    <auth-constraint>
	        <role-name>*</role-name>
	    </auth-constraint>
	</security-constraint>
	
	

	<!-- WELCOME FILE -->

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
